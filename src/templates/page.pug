doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    block styles
      link(rel='stylesheet', href='/styles/main.sass')
    block scripts
      script(src='/scripts/main.js')
      script(src='https://kit.fontawesome.com/f3e0a2dfd8.js', crossorigin='anonymous')
      if DEV
        script.
          const lang = "#{lang}";
        script(src='/scripts/editability.js', defer, type='module')
    title(data-editable=(DEV ? 'title' : false)) #{title}
  body
    block header
      include header.pug
    block content
    block footer
      include footer.pug
  if DEV
    .container
      style.
        #previewFrame {
          width: 100%;
          height: 50vh;
        }
      button.button#preview PREVIEW CHANGES
      iframe#previewFrame
      button.button#save UPLOAD CHANGES (click preview first)