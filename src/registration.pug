extends templates/basicPage.pug

block prepend header
  - const page = "registration";

block append content
  section.hero.is-white
    .container.px-6.pb-6
      p.is-size-2.has-text-dark.has-text-weight-bold.is-size-3-mobile.pt-6(data-editable=(DEV ? 'registrationpt1.current_semester' : false)) #{registrationpt1.current_semester}
      p.registration-text.is-size-5(data-editable=(DEV ? 'registrationpt1.paragraph_one' : false)) #{registrationpt1.paragraph_one}

      .columns.has-text-weight-bold.has-text-centered.is-size-2.my-5
        .column.border-rightorbottom
          p.underlined.pb-5(data-editable=(DEV ? 'registrationpt1.one_child' : false)) #{registrationpt1.one_child}
          .slashed
            p.is-size-2(data-editable=(DEV ? 'registrationpt1.one_child_old_price' : false)) #{registrationpt1.one_child_old_price}
            img.slash-through(src='images/number-slash.svg', alt='A red slash through $280')
          p.is-size-verybig(data-editable=(DEV ? 'registrationpt1.one_child_new_price' : false)) #{registrationpt1.one_child_new_price}
        
        .column.border-rightorbottom
          p.underlined(data-editable=(DEV ? 'registrationpt1.two_children' : false)) #{registrationpt1.two_children}
          p.is-size-5.pb-5(data-editable=(DEV ? 'registrationpt1.per_household1' : false)) #{registrationpt1.per_household1}
          .slashed
            p.is-size-2(data-editable=(DEV ? 'registrationpt1.two_child_old_price' : false)) #{registrationpt1.two_child_old_price}
            img.slash-through(src='images/number-slash.svg', alt='A red slash through $490')
          p.is-size-verybig(data-editable=(DEV ? 'registrationpt1.two_child_new_price' : false)) #{registrationpt1.two_child_new_price}
        
        .column
          p.underlined(data-editable=(DEV ? 'registrationpt1.three_children' : false)) #{registrationpt1.three_children}
          p.is-size-5.pb-5(data-editable=(DEV ? 'registrationpt1.per_household2' : false)) #{registrationpt1.per_household2}
          .slashed
            p.is-size-2(data-editable=(DEV ? 'registrationpt1.three_child_old_price' : false)) #{registrationpt1.three_child_old_price}
            img.slash-through(src='images/number-slash.svg', alt='A red slash through $700')
          p.is-size-verybig(data-editable=(DEV ? 'registrationpt1.three_child_new_price' : false)) #{registrationpt1.three_child_new_price}
      
      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile(data-editable=(DEV ? 'registrationpt1.breakdown' : false)) #{registrationpt1.breakdown}
      ul.list-text.is-size-5.pb-6
        li
          span(data-editable=(DEV ? 'registrationpt1.tuition' : false)) #{registrationpt1.tuition}
          strong(data-editable=(DEV ? 'registrationpt1.tuition_cost' : false)) #{registrationpt1.tuition_cost}
        li
          span(data-editable=(DEV ? 'registrationpt1.registration_fee' : false)) #{registrationpt1.registration_fee}
          strong(data-editable=(DEV ? 'registrationpt1.registration_cost' : false)) #{registrationpt1.registration_cost}
          non-refundable(data-editable=(DEV ? 'registrationpt1.registration_non_refundable' : false)) #{registrationpt1.registration_non_refundable}
        li 
          span(data-editable=(DEV ? 'registrationpt1.registration_fee' : false)) #{registrationpt1.materials_fee}
          strong(data-editable=(DEV ? 'registrationpt1.registration_cost' : false)) #{registrationpt1.materials_cost}
          non-refundable(data-editable=(DEV ? 'registrationpt1.registration_non_refundable' : false)) #{registrationpt1.materials_non_refundable}
        p.py-3 
          strong(data-editable=(DEV ? 'registrationpt1.refund_policy' : false)) #{registrationpt1.refund_policy}
          span(data-editable=(DEV ? 'registrationpt1.text_pt1' : false)) #{registrationpt1.text_pt1}
          strong(data-editable=(DEV ? 'registrationpt1.refund_policy_pt2' : false)) #{registrationpt1.refund_policy_pt2}
          span(data-editable=(DEV ? 'registrationpt1.text_pt2' : false)) #{registrationpt1.text_pt2}

      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile(data-editable=(DEV ? 'registrationpt1.adult_classes' : false)) #{registrationpt1.adult_classes}
      p.registration-text.is-size-3.has-text-dark.has-text-weight-bold.py-2.is-size-5-mobile(data-editable=(DEV ? 'registrationpt1.taichi' : false)) #{registrationpt1.taichi}
      .is-size-5.pb-6
      p
        strong(data-editable=(DEV ? 'registrationpt1.bold_pt1' : false)) #{registrationpt1.bold_pt1}
        span(data-editable=(DEV ? 'registrationpt1.unbold_pt1' : false)) #{registrationpt1.unbold_pt1}
        strong(data-editable=(DEV ? 'registrationpt1.bold_pt2' : false)) #{registrationpt1.bold_pt2}
        span(data-editable=(DEV ? 'registrationpt1.unbold_pt2' : false)) #{registrationpt1.unbold_pt2}
        strong(data-editable=(DEV ? 'registrationpt1.bold_pt3' : false)) #{registrationpt1.bold_pt3}
        span(data-editable=(DEV ? 'registrationpt1.unbold_pt3' : false)) #{registrationpt1.unbold_pt3}
      p
        span(data-editable=(DEV ? 'registrationpt1.unbold_pt4' : false)) #{registrationpt1.unbold_pt4}
        strong(data-editable=(DEV ? 'registrationpt1.bold_pt4' : false)) #{registrationpt1.bold_pt4}
        span(data-editable=(DEV ? 'registrationpt1.unbold_pt5' : false)) #{registrationpt1.unbold_pt5}

      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile(data-editable=(DEV ? 'registrationpt1.eligibility' : false)) #{registrationpt1.eligibility}
      p.registration-text.is-size-5.pb-6(data-editable=(DEV ? 'registrationpt1.eligibility_paragraph' : false)) #{registrationpt1.eligibility_paragraph} 

      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile(data-editable=(DEV ? 'registrationpt1.trial_session' : false)) #{registrationpt1.trial_session}
      p.registration-text.is-size-5.pb-6 
        span(data-editable=(DEV ? 'registrationpt1.trial_session_pt1' : false)) #{registrationpt1.trial_session_pt1}
        a.is-italic.has-text-weight-bold.has-text-primary(href='mailto:clsc.dean@clscweb.org', data-editable=(DEV ? 'registrationpt1.trial_session_pt2' : false)) #{registrationpt1.trial_session_pt2}
        span(data-editable=(DEV ? 'registrationpt1.trial_session_pt3' : false)) #{registrationpt1.trial_session_pt3}
        
      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile(data-editable=(DEV ? 'registrationpt1.late_registration' : false)) #{registrationpt1.late_registration}
      p.registration-text.is-size-5(data-editable=(DEV ? 'registrationpt1.late_registration_paragraph' : false)) #{registrationpt1.late_registration_paragraph}

  section.hero.is-light
    .container.px-6
      p.is-size-1.has-text-weight-bold.py-4.is-size-2-mobile(data-editable=(DEV ? 'registrationpt1.how_to' : false)) #{registrationpt1.how_to}
      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile New Students
      p.registration-text.is-size-5 Families of new students need to download and complete the #[strong CLSC new student registration form] shown below. Once completed, please e-mail the form to our Principal at #[a.is-italic.has-text-weight-bold.has-text-primary(href='mailto:clsc.principal@clscweb.org') clsc.principal@clscweb.org]. Please reach out to the Principal should you have any questions. We will contact you after receipt and review of your form.
      //-red button
      .column.is-one-third.has-text-centered.my-4.is-offset-one-third.py-5
        a(href='https://drive.google.com/file/d/1tuuwyXHAZ0SZAQsd1yX_1pTgizgMOCOZ/view?usp=sharing', target = 'blank')
          .columns.has-text-white.is-mobile.dark-on-hover
            .column
              i.fas.fa-cloud-download-alt.is-size-1.py-2.pr-0.mr-0
            .column.is-two-thirds.has-text-weight-bold.py-2.px-2
              p.is-size-4.is-size-5-mobile.has-text-left New Student Register Here
      p.registration-text.is-size-5.pb-5 Please contact the Principal at #[a.is-italic.has-text-weight-bold.has-text-primary(href='mailto:clsc.principal@clscweb.org') clsc.principal@clscweb.org] with any questions or concerns. We will contact you after your form is reviewed and approved.

      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile Current Students
      p.registration-text.is-size-5 All families of returning students should register for a new semester using the #[a.has-text-primary.has-text-weight-bold Registration Form] shown below. This form can also be used to update your family information. If you need further assistance, please contact the CLSC Registrar via email at #[a.is-italic.has-text-weight-bold.has-text-primary(href='mailto:clsc.registrar@clscweb.org') clsc.registrar@clscweb.org]. Please include your #[strong Family ID] in the subject line.
      //-red button again
      .column.is-one-third.has-text-centered.my-4.is-offset-one-third.pt-5.pb-4
        a(href='http://www.registrationpt1.clscweb.org', target = 'blank')
          .columns.has-text-white.is-mobile.dark-on-hover
            .column
              i.fas.fa-link.is-size-1.py-2.pr-0.mr-0
            .column.is-two-thirds.has-text-weight-bold.py-2.px-2
              p.is-size-4.is-size-5-mobile.has-text-left Current Student Register Here
      p.is-size-2.has-text-dark.has-text-weight-bold.pb-2.is-size-3-mobile Payment

      p.is-size-5.pb-4 CLSC accepts the following forms of payment.

      p.is-size-3.has-text-dark.has-text-weight-bold.pb-2.is-size-5-mobile Zelle Transfer
      .is-size-5.pb-4
        p.pb-2 Instruction for payment by Zelle:
        p.py-2 1) Send your payment to #[a.is-italic.has-text-weight-bold.has-text-primary(href='mailto:payment@clscweb.org') payment@clscweb.org]. 
        p.py-2 2) Include your #[strong Family ID], the #[strong student(s) name], and your #[strong phone number] in the Comments section of the transfer form.
        p.py-2 #[a.has-text-primary.has-text-weight-bold.underlined(href='https://drive.google.com/file/d/1Ci9Mt0S827djvmMiBKRS_oAPUO9QyL_e/view', target = 'blank') Click here] for instructions to set-up a Zelle payment.
        p.is-size-5.px-5 * Note: CLSC encourages everyone to pay via Zelle. Accordingly, we offer a one-time rebate of $5 per family when they first pay by Zelle, which will be credited as a discount towards the following semester’s tuition.
        
      p.is-size-3.has-text-dark.has-text-weight-bold.pb-2.is-size-5-mobile Check
      .is-size-5.pb-6
        p.pb-4 Please make your check payable to #[strong "Chinese Language School of Columbia"] or #[strong "CLSC"].
        p #[strong Make sure to put your Family ID and child’s name on your check.] #[br] Mail your payment to #[em P.O. Box 1292, Ellicott City, MD 21041].
