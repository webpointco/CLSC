extends templates/basicPage.pug

block prepend header
  - const page = "Contact Us";

block content
  section.hero.is-primary
    .container
      .hero-body.py-5
        h1.title.is-1.has-text-weight-bold Contact
  .container.px-6.py-5
    .columns
      .column
        each contact in contacts
          - let [target, info] = contact
          h1.is-size-4.has-text-weight-bold #{target}
          p.is-size-5 #{info}
          br
      .column#contact
        form.has-background-light.py-3.px-6(action='')
          label.label.has-text-weight-bold Name
          .control
            input.input.is-small.mb-4(type='text')
          label.label.has-text-weight-bold Email
          .control
            input.input.is-small.mb-4(type='email')
          label.label.has-text-weight-bold Subject
          .control
            input.input.is-small.mb-4(type='text')
          label.label.has-text-weight-bold Message
          .control
            textarea.textarea.input.has-fixed-size.mb-4#message(rows='4')
          .btn-container
            a.submit-btn.has-background-primary.has-text-white.has-text-weight-bold.px-6.py-2 Submit
