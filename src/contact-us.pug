extends templates/basicPage.pug

block prepend header
  - const page = "Contact Us";

block content
  section.hero.is-primary
    .container
      .hero-body.py-5
        h1.title.is-1.is-size-3-touch.has-text-weight-bold Contact Us
  .container.cc-padding
    .columns.px-3
      .column
        each contact in contacts
          - let [target, info] = contact
          p.is-size-4.is-size-5-mobile.has-text-weight-bold.my-1 #{target}
          p.is-size-5.is-size-6-mobile #{info}
          br
      .column#contact
        form.has-background-light.py-3.px-6.my-3(action='')
          each field in form
            - let [label, type] = field
            label.label.has-text-weight-bold.is-size-4-mobile #{label}
            .control
              input.input.is-small.mb-4.is-size-5-mobile(type='#{type}')
          label.label.has-text-weight-bold.is-size-4-mobile Message
          .control
            textarea.textarea.input.has-fixed-size.mb-4.is-size-5-mobile#message(rows='4')
          .btn-container
            a.submit-btn.has-background-primary.has-text-white.has-text-weight-bold.is-size-4-mobile.px-6.py-2.my-2 Submit
