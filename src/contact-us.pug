extends templates/basicPage.pug

block prepend header
  - const page = "Contact Us";

block content
  section.hero.is-primary
    .container
      .hero-body.py-5
        h1.title.is-1.has-text-weight-bold Contact
  .container.px-6.py-5
    .columns
      .column
        each contact in contacts
          - let [target, info] = contact
          h1.is-size-4.has-text-weight-bold #{target}
          p.is-size-5 #{info}
          br
      .column
        form
